# ===========================================
# Driveby Africa - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in values

# --- Supabase ---
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# --- Site ---
NEXT_PUBLIC_SITE_URL=https://driveby-africa.com
NEXT_PUBLIC_APP_URL=https://driveby-africa.com

# --- WhatsApp (Whapi) ---
WHAPI_TOKEN=your-whapi-token
WHAPI_WEBHOOK_SECRET=your-webhook-secret

# --- OpenAI (AI Chat) ---
OPENAI_API_KEY=your-openai-api-key

# --- Cron Jobs ---
CRON_SECRET=your-cron-secret

# --- Notification Worker ---
NOTIFICATION_WORKER_API_KEY=your-notification-worker-key

# --- Rate Limiting (Upstash Redis, optional) ---
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# --- Vehicle Sync APIs ---
ENCAR_ACCESS_NAME=api1
ENCAR_API_KEY=your-encar-api-key
DONGCHEDI_API_KEY=your-dongchedi-api-key
DONGCHEDI_EXPORT_LOGIN=
DONGCHEDI_EXPORT_PASSWORD=
DUBICARS_API_KEY=your-dubicars-api-key
CHE168_API_KEY=your-che168-api-key
CHE168_ACCESS_NAME=api1

# --- Cloudflare Turnstile (CAPTCHA) ---
NEXT_PUBLIC_TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=

# --- E-Billing Payment (Mobile Money) ---
EBILLING_USER=
EBILLING_API_KEY=
PAYMENT_BACKEND_URL=

# --- Sentry (Error Monitoring, optional) ---
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# --- Legacy WhatsApp (Meta, for quotes) ---
WHATSAPP_PHONE_ID=
WHATSAPP_ACCESS_TOKEN=
